<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/paleturquoise" >

    <TextView
        android:id="@+id/curConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前连接蓝牙数："
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/startTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始测试"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/curConnect"
        />
    <ListView
        android:id="@+id/equipmentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/startTest"
        android:layout_above="@+id/lookData"
        />
    <Button
        android:id="@+id/lookData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看数据"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>