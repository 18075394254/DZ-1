<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zkzn.dz_1.MainActivity">
    <LinearLayout

        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/marginTop"

        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:weightSum="8"

        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接蓝牙"
            android:id="@+id/connect"
            android:layout_weight="1"
            android:textSize="@dimen/textSize"
            android:drawableLeft="@drawable/blueconnect"
            android:paddingLeft="@dimen/paddingPic"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_shape"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置信息"
            android:textSize="@dimen/textSize"
            android:id="@+id/setinfo"
            android:layout_weight="1"
            android:drawableLeft="@drawable/setinfo"
            android:paddingLeft="@dimen/paddingPic"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_shape"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始测试"
            android:textSize="@dimen/textSize"
            android:id="@+id/ontest"
            android:layout_weight="1"
            android:drawableLeft="@drawable/test"
            android:paddingLeft="@dimen/paddingPic"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_shape"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导入数据"
            android:textSize="@dimen/textSize"
            android:id="@+id/importdata"
            android:layout_weight="1"
            android:drawableLeft="@drawable/blueconnect"
            android:paddingLeft="@dimen/paddingPic"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_shape"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开文件"
            android:textSize="@dimen/textSize"
            android:id="@+id/openfile"
            android:layout_weight="1"
            android:drawableLeft="@drawable/openfile"
            android:paddingLeft="@dimen/paddingPic"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_shape"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空数据"
            android:textSize="@dimen/textSize"
            android:id="@+id/exit"
            android:layout_weight="1"
            android:drawableLeft="@drawable/share"
            android:paddingLeft="@dimen/paddingPic"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_shape"
            />
    </LinearLayout>

</RelativeLayout>
